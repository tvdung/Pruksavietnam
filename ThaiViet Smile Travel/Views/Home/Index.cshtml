<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4" style="margin-top: 10px;">

            <a class="tile wide imagetext wideimage bg-color-green" href="@Url.Action("Index", "Tour", new
                     {
                         categoryId = @item.Id
                     })">
                <img src="@item.HinhAnh" alt="">
                <div class="textover-wrapper transparent">
                    <div class="text2">@item.TenTL</div>
                </div>
            </a>
        </div>
    }
</div>

@if (Model.Count == 0)
{
    <div class="col-sm-12 col-lg-12 col-md-12 alert alert-danger error-contact">
        @ViewBag.SearchTourNotFound
    </div>
}
